{
  "name": "reach-ui",
  "description": "The accessible foundation of your React apps and design systems",
  "private": true,
  "author": "React Training <hello@reacttraining.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reach/reach-ui.git"
  },
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook --ci",
    "test:react-16": "USE_REACT_16=true jest",
    "test": "jest",
    "build": "yarn build:packages",
    "build:packages": "preconstruct build",
    "ver": "lerna version --no-push --exact",
    "changes": "dotenv lerna-changelog",
    "clean": "git clean -e '!/.env' -e '!/website-deploy-key' -e '!/website-deploy-key.pub' -fdX .",
    "lint:packages": "eslint packages",
    "lint": "yarn lint:packages",
    "fix": "manypkg fix && preconstruct fix",
    "dev": "preconstruct dev && yarn start",
    "pc": "preconstruct",
    "postinstall": "manypkg check && preconstruct dev",
    "prepare": "husky install",
    "release": "lerna publish from-git --yes --pre-dist-tag next"
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@manypkg/cli": "0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@reach/router": "^1.3.4",
    "@react-spring/web": "^9.4.4",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/eslint": "^8.4.1",
    "@types/invariant": "^2.2.35",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14.x",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-is": "^17.0.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-test-renderer": "^17.0.1",
    "@types/sinon": "^10.0.11",
    "@types/styled-components": "^5.1.25",
    "@types/tabbable": "^3.1.2",
    "@types/warning": "^3.0.0",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.5",
    "babel-plugin-annotate-pure-calls": "0.4.0",
    "babel-plugin-dev-expression": "0.2.3",
    "babel-plugin-macros": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.0.0",
    "eslint": "^8.13.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "jest-watch-typeahead": "^1.0.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.1",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-16": "npm:react@^16.14.0",
    "react-18": "npm:react@^18.0.0",
    "react-dom": "^17.0.2",
    "react-dom-16": "npm:react-dom@^16.14.0",
    "react-dom-18": "npm:react-dom@^18.0.0",
    "react-is": "^17.0.2",
    "react-is-16": "npm:react-is@^16.13.1",
    "react-is-18": "npm:react-is@^18.0.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.2",
    "react-test-renderer-16": "npm:react-test-renderer@^16.13.1",
    "react-test-renderer-18": "npm:react-test-renderer@^18.0.0",
    "sinon": "^11.1.1",
    "styled-components": "^5.3.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "resolutions": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11"
  },
  "workspaces": [
    "packages/*"
  ],
  "changelog": {
    "labels": {
      "Type: Breaking Change": "üî® Breaking Changes",
      "Type: Bug": "üêõ Bugfixes",
      "Type: Documentation": "üìù Documentation",
      "Type: Feature": "üöÄ Features",
      "Type: Enhancement": "‚ú® Enhancements",
      "Type: Housekeeping": "üè° Housekeeping"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": "readonly"
    },
    "rules": {
      "import/first": 0,
      "import/no-anonymous-default-export": 0,
      "jsx-a11y/no-static-element-interactions": [
        1,
        {
          "handlers": [
            "onClick",
            "onMouseDown",
            "onMouseUp",
            "onKeyPress",
            "onKeyDown",
            "onKeyUp"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "packages/*/**/dist"
  ],
  "prettier": {},
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
